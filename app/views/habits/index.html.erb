<p style="color: green"><%= notice %></p>

<% content_for :title, "Habits" %>

<h1 class="text-center my-4">Habits</h1>

<div class="d-flex justify-content-center">
  <div class="scroll-container rounded p-3 mb-2 bg-dark" style="height: 800px; overflow-y: auto; width: 100%; max-width: 800px">
    <div id="habits" class="mb-4 mt-4 me-3 ms-3">
      <% @habits.each do |habit| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= habit.title %></h5>
            <p class="card-text"><%= habit.description %></p>
            <p>
              <%= link_to "Show this habit", habit %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="w-100" style="max-width: 600px;">
      <div class="d-flex justify-content-end">
        <%= link_to new_habit_path, class: "position-absolute bottom-0 end-0 m-3 text-primary" do %>
          <i class="bi bi-plus-circle" style="font-size: 8rem;"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>